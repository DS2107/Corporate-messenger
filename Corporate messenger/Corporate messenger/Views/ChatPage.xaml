<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Corporate_messenger.Service"
             x:Class="Corporate_messenger.Views.ChatPage" Shell.BackgroundColor="Red" Shell.TitleColor="Wheat" x:Name="set_pqage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="FromTemplate">
                <ViewCell x:Name="FromUserCell" IsEnabled="False" >


                    <FlexLayout Background="gray" x:Name="FromUser" x:Uid="0" Direction="Row" JustifyContent="End"  Margin="5,0,10,0" AlignItems="Center" >

                        <StackLayout Margin="0,0,0,10" Orientation="Vertical">
                            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                                <Label Text="User1" HorizontalTextAlignment="End"   FontSize="16" TextColor="Black"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical" WidthRequest="200">
                                <Label Text="{Binding Message}" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
                                <Label Text="23:00" TextColor="DarkSlateGray"/>
                            </StackLayout>
                        </StackLayout>
                        <RelativeLayout   HorizontalOptions="Center" VerticalOptions="Center"  >
                            <Image Source="kot3.jpg"  Aspect="AspectFill" 
                               WidthRequest="60"   
                               HeightRequest="60"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
                                <Image.Clip >
                                    <EllipseGeometry
                                            
                                    Center="30,30"
                                    RadiusX="30"
                                    RadiusY="30"/>
                                </Image.Clip>
                            </Image>
                        </RelativeLayout>


                    </FlexLayout>

                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="ToTemplate">
                <ViewCell  x:Name="ToUserCell" IsEnabled="False">

                    <FlexLayout Background="red"  x:Name="ToUser" x:Uid="1" Direction="Row" JustifyContent="Start"  Margin="5,0,10,0" AlignItems="Center" >

                        <RelativeLayout  HorizontalOptions="Center" VerticalOptions="Center"  >
                            <Image Source="kot.jpg"  Aspect="AspectFill" 
                               WidthRequest="60"   
                               HeightRequest="60"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
                                <Image.Clip >
                                    <EllipseGeometry
                                            
                                    Center="30,30"
                                    RadiusX="30"
                                    RadiusY="30"/>
                                </Image.Clip>
                            </Image>
                        </RelativeLayout>
                        <StackLayout Margin="10,0,0,0" Orientation="Vertical" >
                            <StackLayout Orientation="Horizontal">
                                <Label Text="User2" FontSize="16" TextColor="Black"/>
                            </StackLayout>
                            <StackLayout Orientation="Vertical"  WidthRequest="200">
                                <Label Text="{Binding Message}"/>
                                <Label Text="23:00" TextColor="DarkSlateGray"/>

                            </StackLayout>
                        </StackLayout>



                    </FlexLayout>

                </ViewCell>
            </DataTemplate>
            <local:ClassDataTemplateSelector x:Key="chatDataTemplateSelector" FromTemplate="{StaticResource FromTemplate}" ToTemplate="{StaticResource ToTemplate}"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout >

            <ListView  Margin="0,0,0,0" SeparatorColor="Transparent"  x:Name="MyListView" HasUnevenRows="true" ItemTemplate="{StaticResource chatDataTemplateSelector}"  ItemsSource="{Binding MessageList}" >

            </ListView>
            <StackLayout>
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="60" />
                    </Grid.ColumnDefinitions>
                    <Editor x:Name="MessageEditor" HorizontalOptions="FillAndExpand" Keyboard="Chat" TextColor="Black" Placeholder="Введите сообщение..." AutoSize="TextChanges" Text="{Binding Input_message}"  ></Editor>
                    <ImageButton Source="send_message.png" Grid.Row="0" Grid.Column="1" BackgroundColor="Transparent" WidthRequest="60" HeightRequest="60" x:Name="send_message" 
                    Command="{Binding SendMessage}"
                    CommandParameter="{Binding}"/>
                </Grid>
            </StackLayout>
          




        </StackLayout>
    </ContentPage.Content>
</ContentPage>